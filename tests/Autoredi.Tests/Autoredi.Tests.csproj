<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <!-- Enable source generators -->
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NSubstitute" Version="5.3.0" />
        <PackageReference Include="TUnit" Version="1.12.93" />
        <PackageReference Update="Microsoft.Extensions.DependencyInjection" Version="10.0.2" />
        <PackageReference Update="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.2" />
        <PackageReference Update="Microsoft.SourceLink.GitHub" Version="10.0.102" />
    </ItemGroup>

    <!-- Reference the main project -->
    <ItemGroup>
        <ProjectReference Include="..\..\src\Autoredi\Autoredi.csproj" />
    </ItemGroup>

    <!-- Reference the source generator project -->
    <ItemGroup>
        <ProjectReference
            Include="..\..\src\Autoredi.Generators\Autoredi.Generators.csproj"
            OutputItemType="Analyzer"
            ReferenceOutputAssembly="false"
        />
    </ItemGroup>

</Project>
